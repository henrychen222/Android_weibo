<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.weibotest08_31.widget.TitleBar
        android:id="@+id/aep_tb_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓  名  " />

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/aep_et_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性  别  " />

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/aep_et_sex"
            android:layout_width="260dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年  龄  " />

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/aep_et_age"
            android:layout_width="260dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号" />

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/aep_et_phone"
            android:layout_width="260dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/aep_bt_update"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="提交"
        android:textColor="#ffffff" />
		
        <TextView
            android:id="@+id/aep_et_pwd"
            android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

</LinearLayout>