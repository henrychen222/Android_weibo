<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.weibotest08_31.widget.TitleBar
        android:id="@+id/au_tb_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/au_rl_head"
        android:layout_below="@+id/au_tb_title"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/default_blank"
        >
        <ImageView
            android:id="@+id/au_iv_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/head5"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/au_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零比一"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_below="@+id/au_iv_head"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/au_view"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/au_tv_name"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/au_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零比一"
            android:textColor="#fff"
            android:layout_below="@+id/au_tv_name"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/au_view"
            android:layout_toLeftOf="@+id/au_view"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/au_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零比一"
            android:textColor="#fff"
            android:layout_below="@+id/au_tv_name"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/au_view"
            android:layout_toRightOf="@+id/au_view"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ListView
        android:layout_below="@+id/au_rl_head"
        android:layout_above="@+id/au_bt_commit"
        android:id="@+id/au_lv_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollingCache="false"/>

    <Button
        android:id="@+id/au_bt_commit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="取消关注"
        />
</RelativeLayout>