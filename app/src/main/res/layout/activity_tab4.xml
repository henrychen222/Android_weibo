<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.example.weibotest08_31.widget.TitleBar
        android:id="@+id/at4_tb_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#E6E6FA"

        />

    <RelativeLayout
        android:id="@+id/at4_rl_myfans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/at4_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:src="@drawable/head5" />

        <TextView
            android:id="@+id/at4_tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/at4_iv_head"
            android:padding="3dp"
            android:text="零比一" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/at4_tv_nick"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/at4_iv_head"
            android:padding="3dp"
            android:text="简介：暂无简介"
            android:textColor="#66000000"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/at4_iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/card_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#11000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/at4_ll_weibolist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="100" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="微博"
                android:textColor="#66000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/at4_ll_guanzhu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="100" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="关注"
                android:textColor="#66000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/at4_ll_fans"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="100" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="粉丝"
                android:textColor="#66000000" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/at4_rl_editpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_appcenter" />

        <TextView
            android:id="@+id/username123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag"
            android:text="修改密码"
            android:textSize="15dp" />


        <ImageView
            android:id="@+id/card_arrow1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/card_arrow" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/at4_rl_editpersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_appcenter" />

        <TextView
            android:id="@+id/username1231"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag1"
            android:text="修改个人资料"
            android:textSize="15dp" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/card_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/viewxian14"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/at4_rl_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag31"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_stock" />

        <TextView
            android:id="@+id/username31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag31"
            android:text="关于我们"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/card_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/at4_rl_yijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag3111"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_stock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag3111"
            android:text="反馈意见"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/card_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/at4_rl_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag311"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_stock" />

        <TextView
            android:id="@+id/username312"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag311"
            android:text="版本信息"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/card_arrow" />
    </RelativeLayout>
</LinearLayout>